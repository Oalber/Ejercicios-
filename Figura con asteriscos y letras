#include <stdio.h>

int main() {

char letra;

int altura;

printf("Ingrese una letra: ");

scanf(" %c", &letra);

printf("Ingrese la altura de la figura: ");

scanf("%d", &altura);

for (int i = 1; i <= altura; i++) {

for (int j = 1; j <= i; j++) {

if (i == altura || j == 1 || j == i) {

printf("%c", letra);

} else {

printf("*");

}

}

printf("\n");

}

return 0;

}
